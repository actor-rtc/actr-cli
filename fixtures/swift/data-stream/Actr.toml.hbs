edition = 1
exports = []

[package]
name = "{{PROJECT_NAME}}"
description = "Data stream client app"
authors = ["Actr-Team"]
license = "Apache-2.0"
tags = ["dev", "client"]

[package.actr_type]
manufacturer = "acme"
name = "StreamEchoClient"

[dependencies]
stream-echo-server-python = { actr_type = "acme+StreamEchoServer" }

[system.signaling]
url = "{{SIGNALING_URL}}"

[system.deployment]
realm_id = {{REALM_ID}}

[system.discovery]
visible = true

[system.observability]
filter_level = "debug"
tracing_enabled = true
tracing_endpoint = "http://127.0.0.1:4317"
tracing_service_name = "{{PROJECT_NAME}}"

[system.webrtc]
force_relay = false
stun_urls = {{STUN_URLS}}
turn_urls = {{TURN_URLS}}

[scripts]
dev = "xcodegen generate"
test = "xcodebuild test"

[acl]

[[acl.rules]]
permission = "allow"
types = ["acme+StreamEchoServer"]
