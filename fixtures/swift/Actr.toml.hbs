edition = 1
exports = []

[package]
name = "{{PROJECT_NAME}}-client-app"
description = "Echo client app"
authors = ["Actr-Team"]
license = "Apache-2.0"
tags = ["dev", "client"]

[package.actr_type]
manufacturer = "acme"
name = "echo-client-app"

[dependencies]
echo-server = { actr_type = "acme:EchoService" }

[system.signaling]
# When running on a physical device, do not use localhost/127.0.0.1.
url = "{{SIGNALING_URL}}/signaling/ws"

[system.deployment]
realm = 0

[system.discovery]
visible = true

[system.observability]
filter_level = "debug"
tracing_enabled = true
tracing_endpoint = "http://127.0.0.1:4317"
tracing_service_name = "{{PROJECT_NAME}}-client-app"

[system.webrtc]
force_relay = false
stun_urls = ["stun:127.0.0.1:3478"]
turn_urls = ["turn:127.0.0.1:3478"]

[scripts]
dev = "xcodegen generate"
test = "xcodebuild test"

[acl]

[[acl.rules]]
permission = "allow"
types = ["acme:EchoService"]
