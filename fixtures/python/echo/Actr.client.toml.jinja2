edition = 1
exports = []

[package]
name = "{{PROJECT_NAME}}-echo-client"
description = "Shell echo client (Python demo)"
authors = []
license = "Apache-2.0"
tags = ["dev", "example", "python"]

[package.actr_type]
manufacturer = "acme"
name = "echo-client-app"

[system.signaling]
url = "{{SIGNALING_URL}}/signaling/ws"

[system.webrtc]
force_relay = false
stun_urls = ["stun:127.0.0.1:3478"]
turn_urls = ["turn:127.0.0.1:3478"]

[system.deployment]
realm = 0

[system.discovery]
visible = true

[acl]

[[acl.rules]]
permission = "allow"
types = ["acme+EchoService"]

[scripts]
dev = "python client.py --actr-toml Actr.toml client-1 \"hello\""
